<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:hint="Winners"
        android:layout_marginTop="10dp"
        android:id="@+id/textViewResultEventName"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/imageViewEventName" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageViewEventName"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:hint="Medium Text"
        android:layout_marginTop="10dp"
        android:id="@+id/textViewWinners"
        android:layout_alignEnd="@+id/textViewEventName"
        android:layout_below="@+id/textViewResultEventName"
        android:layout_toEndOf="@+id/imageViewEventName" />
</RelativeLayout>